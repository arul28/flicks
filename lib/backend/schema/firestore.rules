rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{document} {
      allow create: if request.auth.uid == request.resource.data.email;
      allow read: if request.auth.uid == resource.data.email;
      allow write: if request.auth.uid == resource.data.email;
      allow delete: if request.auth.uid == resource.data.email;
    }

    match /users/{parent}/currentSessionPics/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if true;
      allow delete: if true;
    }

    match /{path=**}/currentSessionPics/{document} {
      allow read: if true;
    }


    match /currentSessionDetails/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if true;
      allow delete: if true;
    }
  }
}
